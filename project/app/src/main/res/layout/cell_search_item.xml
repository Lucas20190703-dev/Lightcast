<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/round_10_white_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="12dp"
        android:background="@drawable/round_top_10_dark_background"
        android:elevation="0dp"
        >
        <TextView
            android:id="@+id/episodeNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:maxLines="2"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/podcastContentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/avatarImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/default_album_art"
                    android:scaleType="fitCenter"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingHorizontal="8dp"
                android:orientation="vertical"
                android:weightSum="4">
                <TextView
                    android:id="@+id/podcastNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:textColor = "@android:color/white"
                    android:gravity="bottom"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/publishDateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:gravity="bottom"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/authorNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:gravity="bottom"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/durationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:gravity="bottom"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/podcastDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:maxLines="2"
            android:textColor="@android:color/white"
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="4"
            >
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/playAppCompatImageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_weight="1"
                android:src="@drawable/ic_circle_play"
                />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/subscribeAppCompatImageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_weight="1"
                android:src="@drawable/ic_circle_thumb_60dp"
                />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/transcribeAppCompatImageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_weight="1"
                android:src="@drawable/ic_circle_mic_60dp"
                />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/listenLaterAppCompatImageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_weight="1"
                android:src="@drawable/ic_circle_headset"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingBottom="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:paddingBottom="4dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "@string/episode_description"
                android:textColor="@color/color_text_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <FrameLayout
                android:id="@+id/quickViewButtonLayout"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:src="@drawable/ic_eye_black_24dp"
                    android:tint="@color/color_text_dark_gray"
                    />
            </FrameLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/episodeDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_dark_gray"
            />
    </LinearLayout>
</LinearLayout>